<%= render 'admin/header' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>会員一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td>
                <%= link_to customer.full_name, admin_customer_path(customer.id) %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted? %>
                  退会
                <% else %>
                　有効
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @customers %>
        <tbody>
      </table>
    </div>
  </div>
</div>

