<%= render 'public/header' %>
<main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col mt-5 text-center">
          <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "300x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "300x200" %>
          <% end %>
        </div>
        <div class="col mt-5">
          <h3>
            <%= @item.name %>
          </h3>
          <div class="form-group pt-3">
            <p>
              <%= @item.introduction %>
            </p>
          </div>
          <div class="form-group pt-5">
            <h4>¥<%= @item.price_tax %>(税込)</h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <%= form_with model: CartItem, method: :post do |f| %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.select :amount, *[1..10], { include_blank: "個数選択" }, class: "mt-3 mr-2 py-1 px-4" %>
            <%= f.submit 'カートに入れる', class: "btn btn-success btn-sm ml-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </main>