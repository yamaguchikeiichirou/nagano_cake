<%= render 'public/header' %>
<main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col">
          <tr>
            <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "300x200" %>
            <% end %>
          </tr>
        </div>
        <div class="col">
          <tr>
            <h2>
                <%= @item.name %>
            </h2>
            <div class="form-group">
              <td>
                商品説明
                <%= @item.introduction %>
              </td>
            </div>
            <div class="form-group">
              <td>
                税込価格</br>
                (税抜価格)
                <%= @item.price %>円
              </td>
            </div>
            <div class="form-group">
              <td>
                販売ステータス
                <%= @item.is_active %>
              </td>
            </div>
            <div class="form-group">
              <td>
                <%= link_to "カートに入れる", cart_items_path %>
              </td>
            </div>
          </tr>
        </div>
      </div>
    </div>
  </main>