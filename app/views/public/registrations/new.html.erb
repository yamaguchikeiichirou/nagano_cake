<%= render 'public/header' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-auto my-4 ml-5 text-center table-secondary">
      <caption>新規会員登録</caption>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
　        <tr>
            <th class="pb-2">名前</th>
            <td class="pb-2">（名）</td><td class="pb-2"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            <td class="pb-2">（姓）</td><td class="pb-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>

          </tr>
          <tr>
            <th class="pb-2">フリガナ</th>
            <td class="pb-2">（メイ）</td><td class="pb-2"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
            <td class="pb-2">（セイ）</td><td class="pb-2"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>

          </tr>
          <tr>
            <th class="pb-2">メールアドレス</th>
            <td class="pb-2"></td>
            <td class="pb-2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
　        <tr>
            <th class="pb-2">郵便番号（ハイフンなし）</th>
            <td class="pb-2"></td>
            <td class="pb-2"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
          </tr>
          <tr>
            <th class="pb-2">住所</th>
            <td class="pb-2"></td>
            <td class="pb-2"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
          </tr>
          <tr>
            <th class="pb-2">電話番号</th>
            <td class="pb-2"></td>
            <td class="pb-2"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>
          <tr>
            <th class="pb-2">
              パスワード
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </th>
            <td class="pb-2"></td>
            <td class="pb-2">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th class="pb-2">パスワード（確認用）</th>
            <td class="pb-2"></td>
            <td class="pb-2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td>
              <div class="actions">
                <%= f.submit "新規登録", class: "btn btn-primary btn-success px-5" %>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-auto my-4 ml-5 text-center table-secondary">
      <caption>既に登録済の方</caption>
    </div>
  </div>
  <div class="row">
    <div class="col ml-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


