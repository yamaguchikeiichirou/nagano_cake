  <%= render 'admin/header' %>
  <main>
    <div class="container">
      <div class="row mx-5 mt-4 mb-5">
        <div class="col-auto mt-3 mb-2 mx-3 text-center table-secondary">
          <caption>商品詳細</caption>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
            <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "300x200" %>
            <% end %>
        </div>
        <div class="col-1"></div>
        <div class="col-md-6">
          <table width="100%">
            <tr>
              <th class="py-2" width="30%">商品名</th>
              <td class="py-2"><%= @item.name %></td>
            </tr>
            <tr>
              <th class="py-2">商品説明</th>
              <td class="py-2"><%= @item.introduction %></td>
            </tr>
            <tr>
              <th class="py-2">税込価格</br>(税抜価格)</th>
              <td class="py-2"><%= @item.price_tax.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
            </tr>
            <tr>
              <th class="py-2">販売ステータス</th>
              <td class="pt-3">
                <% if @item.is_active? %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-muted">販売停止中</p>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row justify-content-md-center">
        <%= link_to "編集", edit_admin_item_path(@item.id), class: "btn btn-success px-4 my-4" %>
      </div>
    </div>
  </main>