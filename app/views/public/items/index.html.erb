<%= render 'public/header' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col">
      <h2>商品一覧</h2>
      <p>（全<%= @items.count %>件）</p>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col">
        　<div class="form-group">
        　   <%= link_to item_path(item.id) do %>
            　<% if item.image.attached? %>
              　<%= image_tag item.image, size: "250x160" %>
            　<% else %>
              　<%= image_tag 'no_image', size: "250x160" %>
            　<% end %>
            <% end %>
        　</div>
          <div class="form-group">
            <td>
              <%= item.name %>
            </td>
          </div>
          <div class="form-group">
            <td>
              ¥<%= item.price %>
            </td>
          </div>
        </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>