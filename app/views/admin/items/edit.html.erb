<%= render 'admin/header' %>
<div class="container">
  <div class="row mx-5">
    <div class="col-auto my-5 mx-3 text-center table-secondary">
      <caption>商品編集</caption>
    </div>
  </div>
  <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
  <div class="row justify-content-md-center">
    <div class="col-7">
      <table width="100%">
　      <tr>
　        <th class="pb-3">商品画像</th>
　        <td class="pb-3"><%= f.file_field :image, accept: 'image/*' %></td>
　      </tr>
　      <tr>
　        <th class="pb-3">商品名</th>
　        <td class="pb-3"><%= f.text_field :name %></td>
　      <tr>
　      <tr>
　        <th class="pb-3">商品説明</th>
　        <td class="pb-3"><%= f.text_area :introduction %></td>
　      <tr>
　      <tr>
　        <th class="pb-3">税抜価格</th>
　        <td class="pb-3"><%= f.text_field :price %>円</td>
　      </tr>
　      <tr>
　        <th class="pb-3">販売ステータス</th>
　        <td class="pb-3">
　          <%= f.radio_button :is_active, '1' %><%= f.label :is_active, '販売中', value: 1 %>
　          
            <%= f.radio_button :is_active, '0' %><%= f.label :is_active, '販売停止中', value: 0 %>
　        </td>
　      </tr>
　    </table>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <%= f.submit '変更を保存', class: "btn btn-success px-4" %>
  </div>
  <% end %>
</div>
