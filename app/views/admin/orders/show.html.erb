<%= render 'admin/header' %>
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <h1>注文履歴詳細</h1>
        <div>
          <tr>
            <div class="form-group">
              <td>
                購入者
                <%= @customer.full_name %>
              </td>
            </div>
            <div class="form-group">
              <td>
                注文日
                <%= @order.created_at %>
              </td>
            </div>
            <div class="form-group">
              <td>
                配送先
                <%= @order.address %>
              </td>
            </div>
            <div class="form-group">
              <td>
                支払方法
                <%= @order.payment_method %>
              </td>
            </div>
            <div class="form-group">
              <td>
                注文ステータス
                <%= @order.status %>
              </td>
            </div>
            <div class="form-group">
              <td>
                <% form_with model: @order, patch do |f| %>
                  <%= f.radio_button :status, Order.statuses.key(0) %>
                  <%= f.label :status_wait_payment,  Order.statuses_i18n[:wait_payment]%>
                  <%= f.radio_button :status, Order.statuses.key(1) %>
                  <%= f.label :status_payment_confirmation, Order.statuses_i18n[:payment_confirmation] %>
                  <%= f.radio_button :status, Order.statuses.key(2) %>
                  <%= f.label :status_production,  Order.statuses_i18n[:production]%>
                  <%= f.radio_button :status, Order.statuses.key(3) %>
                  <%= f.label :status_shipping_preparation, Order.statuses_i18n[:shipping_preparation] %>
                  <%= f.radio_button :status, Order.statuses.key(4) %>
                  <%= f.label :status_shipped, Order.statuses_i18n[:shipped] %>
                <% end %>
              </td>
            </div>
          </tr>
        </div>
      </div>
    </div>
  </main>



