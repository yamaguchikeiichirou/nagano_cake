<%= render 'admin/header' %>
<main>
  <div class="container">
    <div class="row">
      <div>
          <tr>
            <h2><%= @customer.full_name %>さんの会員情報編集</h2>
            <div class="form-group">
              <td>
                会員ID
                <%= @customer.id %>
              </td>
            </div>
            <div class="form-group">
              <td>
                氏名
                <%= @customer.last_name %> <%= @customer.first_name %>
              </td>
            </div>
            <div class="form-group">
              <td>
                フリガナ
                <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
              </td>
            </div>
            <div class="form-group">
              <td>
                郵便番号
                <%= @customer.postal_code %>
              </td>
            </div>
            <div class="form-group">
              <td>
                電話番号
                <%= @customer.telephone_number %>
              </td>
            </div>
            <div class="form-group">
              <td>
                メールアドレス
                <%= @customer.email %>
              </td>
            </div>
            <div class="form-group">
              <td>
                住所
                <%= @customer.address %>
              </td>
            </div>
            <div class="form-group">
              <td>
                退会ステータス
                <%= form_with model: @customer,url: admin_customer_path(@customer), method: :patch do |f| %>
　                <%= f.label :is_deleted, '有効', value:false %>
                  <%= f.radio_button :is_deleted, 'false' %>

                  <%= f.label :is_deleted, '退会', value: true %>
                  <%= f.radio_button :is_deleted, 'true' %>
                  <%= f.submit '変更を保存' %>
                <% end %>
              </td>
            </div>
          </tr>
      </div>
    </div>
  </div>
</main>
