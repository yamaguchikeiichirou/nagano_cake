<%= render 'admin/header' %>
<%= render 'admin/header' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>注文履歴一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>   
            <th>購入日時</th>
            <th>購入者</th>
            <th><注文個数/th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @order_details.each do |order_detail| %>
          <div class="form-group">
            <tr>
              <td>
                <%= @order.created_at %>
              </td>
              <td>
                <%= @customer.full_name %>
              </td>
              <td>
                <%= order_details.amount %>
              </td>
              <td>
                <% @order.status? %>
              </td>
            </tr>
          </div>
        <% end %>
        <%= paginate @order_details %>
        <tbody>
      </table>
    </div>
  </div>
</div>
