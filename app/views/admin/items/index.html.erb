<%= render 'admin/header' %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <div class="form-group">
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item.id) %>
              </td>
              <td>
                <%= item.price %>
              </td>
              <td>
                <% if item.is_active? %>
                  販売中
                <% else %>
                 販売停止中
                <% end %>
              </td>
            </tr>
          </div>
        <% end %>
          <%= paginate @items %>
        <tbody>
      </table>
    </div>
  </div>
</div>
