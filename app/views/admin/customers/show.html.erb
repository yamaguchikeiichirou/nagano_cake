  <%= render 'admin/header' %>
  <main>
    <div class="container">
      <div class="row mx-5">
        <div class="col-auto mt-3 mb-2 mx-3 text-center table-secondary">
          <caption><%= @customer.full_name %>さんの会員詳細</caption>
        </div>
      </div>
      <div class="row mx-5">
        <div class="col-8">
          <table width="100%">
            <tr>
              <th class="pb-3">会員ID</th>
              <td class="pb-3"><%= @customer.id %></td>
            </tr>
            <tr>
              <th class="pb-3">氏名</th>
              <td class="pb-3">
                <%= @customer.last_name %>
                <%= @customer.first_name %>
              </td>
            </tr>
            <tr>
              <th class="pb-3">フリガナ</th>
              <td class="pb-3">
                <%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
              </td>
            </tr>
            <tr>
              <th class="pb-3">郵便番号</th>
              <td class="pb-3"><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th class="pb-3">住所</th>
              <td class="pb-3"><%= @customer.address %></td>
            </tr>
            <tr>
              <th class="pb-3">電話番号</th>
              <td class="pb-3"><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th class="pb-3">メールアドレス</th>
              <td class="pb-3"><%= @customer.email %></td>
            </tr>
            <tr>
              <th class="pb-3">会員ステータス</th>
              <td class="pb-3">
                <% if @customer.is_deleted? %>
                  <p class="text-muted pt-2">退会</p>
                <% else %>
                　<p class="text-success pt-2">有効</p>
                <% end %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success  btn-sm px-3" %></td>
              <td><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary btn-sm px-3" %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </main>





