<%= render 'admin/header' %>
<main>
  <div class="container">
    <div class="row">
      <div>
          <tr>
            <h2><%= @customer.full_name %>さんの会員詳細</h2>
            <div class="form-group">
              <td>
                会員ID
                <%= @customer.id %>
              </td>
            </div>
            <div class="form-group">
              <td>
                氏名
                <%= @customer.last_name %> <%= @customer.first_name %>
              </td>
            </div>
            <div class="form-group">
              <td>
                フリガナ
                <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
              </td>
            </div>
            <div class="form-group">
              <td>
                郵便番号
                <%= @customer.postal_code %>
              </td>
            </div>
            <div class="form-group">
              <td>
                電話番号
                <%= @customer.telephone_number %>
              </td>
            </div>
            <div class="form-group">
              <td>
                メールアドレス
                <%= @customer.email %>
              </td>
            </div>
            <div class="form-group">
              <td>
                住所
                <%= @customer.address %>
              </td>
            </div>
            <div class="form-group">
              <td>
                <% if customer.is_deleted? %>
                  退会
                <% else %>
                　有効
                <% end %>
              </td>
            </div>
            <div class="form-group">
              <td>
                <%= link_to "編集する", edit_admin_customer_path(@customer.id) %><%= link_to "注文履歴一覧を見る", admin_rootpath %>
              </td>
            </div>

          </tr>
      </div>
    </div>
  </div>
</main>





