<%= render 'admin/header' %>
<div class="container px-5">
  <div class="row mx-5">
    <div class="col-auto mt-3 mb-2 mx-3 text-center table-secondary">
      <caption>会員一覧</caption>
    </div>
  </div>
  <div class="row mx-5">
    <div class="col-11">
      <table class="table table-hover table-inverse" width="100%">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>
              <td>
                <%= link_to customer.full_name, admin_customer_path(customer.id), class: "text-dark border-bottom border-dark" %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_deleted? %>
                  <p class="text-muted">退会</p>
                <% else %>
                　<p class="text-success">有効</p>
                <% end %>
              </td>
            </tr>
          <% end %>
          <%= paginate @customers %>
        <tbody>
      </table>
    </div>
  </div>
</div>

