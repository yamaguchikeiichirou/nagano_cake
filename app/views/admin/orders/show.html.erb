<%= render 'admin/header' %>
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col">
          <caption>注文履歴詳細</caption>
          <table>
            <tr>
              <th>購入者</th>
              <td><%= @order.customer.full_name %></td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.to_s(:datetime_jp) %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%= @order.postal_code %><%= @order.address %></br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with model: @order,url: admin_order_path(@order), method: :patch do |f| %>
                  <%= f.select :status, Order.statuses.keys.map { |k| [t("enums.order.status.#{k}"), k] } %>
                  <%= f.submit "更新" %>
                <% end %>
              </td>
            </tr>
          </table>
          <table>
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= order_detail.item.name %></td>
                  <td><%= order_detail.price %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= @total %></td>
                  <td>
                    <%= form_with model: order_detail,url: admin_path(order_detail.id), method: :patch do |f| %>
                      <%= f.select :making_status, OrderDetail.making_statuses.keys.map { |k| [t("enums.order_detail.making_status.#{k}"), k] } %>
                      <%= f.submit "更新" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>



